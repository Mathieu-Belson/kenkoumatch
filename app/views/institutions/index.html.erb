<div class="container page-content"  data-controller="google-search" data-practice="<%= @practice.japanese_name %>">
  <div class='d-flex justify-content-center mt-5'>
    <div class='col-12 col-md-6'>
      <div class='bg-white border border-info border-opacity-25 rounded-4 shadow p-3 bg-body rounded'>
        <h1 class="text-center mt-2"><%=@practice.name%></h1>
        <!-- <div data-controller="google-search" data-practice="<%= @practice.japanese_name %>"> -->
        <!-- <div> -->
        <div class="p-3 mt-3 d-flex flex-column">
          <%= form_with class: 'd-flex flex-column', data: { action: "submit->google-search#searchNearbyInstitutionsFromAddress"}  do |form| %>
            <div class='mt-3 text-center fa-sharp fa-map-location-dot fa-solid fa-2xl mb-5' style="color: #3399b7;" data-action='click->google-search#searchNearbyInstitutionsFromCurrentLocation'></div>

            <%= form.text_field :address, placeholder: 'Enter an address', data: {google_search_target: "input"}, class: 'mb-3 form-control'%>
            <div class='d-flex justify-content-center p-3'>
              <%= link_to "Cancel", :back , {:class=>"btn btn-outline-danger fixed-width"} %>
              <%# <%= form.submit '', class: 'btn custom-button fixed-width' %>
            <% end %>

          </div>
        </div>
        <div id="map">
          <div id="results">

          </div>
        </div>
        <!-- </div> -->
        <!-- </div> -->
      </div>
      <div data-google-search-target="result" class="d-flex justify-content-center mb-3 mt-4 fw-bold"></div>
      <div class='mt-3' id="card-institutions-index-container" data-google-search-target="cardInstitutionsIndexContainer"></div>
    </div>
  </div>
</div>
