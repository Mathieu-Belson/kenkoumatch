<p class="h3 practice-count">
  <% if params[:query].blank? %>
    <%= pluralize practices.count, "practice" %> available
  <% else %>
    <%= pluralize practices.count, "result" %> for <code><%= params[:query] %></code>
  <% end %>
</p>
<div class="practices container">
  <%# <h2>Practices</h2> %>
  <div class="row">
    <% practices.each do |practice| %>
      <div class="col-6 col-lg-4">
        <%= render "practice_infos", practice: practice %>
      </div>
    <% end %>
  </div>
</div>
