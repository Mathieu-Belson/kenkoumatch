<div class='container'>
  <div class='row justify-content-center mt-5'>
    <div class='col-12 col-md-6'>
      <div class="bg-white border border-info border-opacity-25 rounded-4 shadow p-3 bg-body rounded">
        <h1>Cards#new</h1>
        <%= simple_form_for [@practice, @card] do |f| %>
          <%= f.input :originalcontent, input_html: { maxlength: 300, value: "be specific" } %>
          <div class='d-flex justify-content-between'>
            <%= f.submit "create card", class: "btn custom-button fixed-width" %>
            <%= link_to "Cancel", :back , {:class=>"btn btn-outline-danger fixed-width"}%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
