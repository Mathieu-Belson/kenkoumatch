<div class="container page-content">
  <div class='d-flex justify-content-center mt-5'>
    <div class='col-12 col-md-6 wordsphrases'>
      <div class='bg-white border border-info border-opacity-25 rounded-4 shadow p-3 bg-body rounded'>
        <h1 class="text-center mt-2 mb-5">Your Favorite words</h1>
        <ul>
          <%@studywords.each do |word|%>
            <li><%=word.kanji%>, <%=word.kana%>, <%=word.english%>
            </li>
          <%end%>
        </ul>
      </div>
      <div class='bg-white border border-info border-opacity-25 rounded-4 shadow p-3 bg-body rounded'>
        <h1 class="text-center mt-2 mb-5">Your Favorite Phrases</h1>
        <ul>
          <%@studyphrases.each do |phrase|%>
            <li><%=phrase.kanji%>, <%=phrase.kana%>, <%=phrase.english%>
            </li>
          <%end%>
        </ul>
      </div>
      <div class="d-flex justify-content-center">
        <%= link_to "Back", :back , {:class=>"btn btn-outline-danger"} %>
      </div>
    </div>
  </div>
</div>
